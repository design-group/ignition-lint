      "expectations": [
        {
          "rule_name": "NamePatternRule",
          "error_count": 0,
          "should_pass": true
        }
      ],
      "tags": [
        "component_naming",
        "camel_case",
        "positive"
      ]
    },
    {
      "name": "snake_case_positive",
