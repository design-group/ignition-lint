{
  "_comment": "config with rules enabled by default",
  "PylintScriptRule": {
    "enabled": true,
    "kwargs": {}
  },
  "PollingIntervalRule": {
    "enabled": true,
    "kwargs": {
      "minimum_interval": 10000
    }
  },
  "NamePatternRule": {
    "enabled": true,
    "kwargs": {
      "target_node_types": [
        "component",
        "property"
      ],
      "node_type_specific_rules": {
        "component": {
          "convention": "PascalCase",
          "min_length": 3
        },
        "property": {
          "convention": "camelCase",
          "min_length": 2
        }
      }
    }
  }
}