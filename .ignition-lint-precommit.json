{
  "_comment": "Pre-commit configuration - provides helpful feedback without blocking commits",
  "NamePatternRule": {
    "enabled": true,
    "kwargs": {
      "target_node_types": ["component", "property"],
      "node_type_specific_rules": {
        "component": {
          "convention": "PascalCase",
          "severity": "warning",
          "min_length": 3
        },
        "property": {
          "convention": "camelCase",
          "severity": "warning",
          "min_length": 2
        }
      }
    }
  },
  "PollingIntervalRule": {
    "enabled": true,
    "kwargs": {
      "minimum_interval": 5000
    }
  },
  "UnusedCustomPropertiesRule": {
    "enabled": false,
    "_comment": "Disabled for pre-commit to avoid blocking commits on test properties"
  }
}
