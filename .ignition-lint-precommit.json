{
  "_comment": "This is the standard configuration file for Ignition projects. Adjust rules as necessary for your project.",
  "NamePatternRule": {
    "enabled": true,
    "kwargs": {
      "node_type_specific_rules": {
        "component": {
          "convention": "PascalCase",
          "min_length": 3,
          "severity": "error"
        },
        "property": {
          "convention": "camelCase",
          "min_length": 2,
          "severity": "error"
        },
        "message_handler": {
          "convention": "kebab-case",
          "min_length": 3,
          "severity": "error"
        }
      }
    }
  },
  "PollingIntervalRule": {
    "enabled": true,
    "kwargs": {
      "minimum_interval": 5000
    }
  }
}
